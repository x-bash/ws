___x_cmd_ws_help(){
    cat "$___X_CMD_ROOT_MOD/ws/lib/help.txt"
}

___x_cmd_ws_root(){
    if [ "${1:-.}" = . ]; then
        local cur="$PWD"
    else
        cd "${1:-.}" 2>&1 && local cur="${PWD}" && cd "$OLDPWD" || return
    fi

    while [ ! "$cur" = "" ]; do
        if [ -d "$cur/.x-cmd" ]; then
            printf "%s\n" "$cur"
            return 0
        fi
        cur=${cur%/*}
    done
    return 1
}

